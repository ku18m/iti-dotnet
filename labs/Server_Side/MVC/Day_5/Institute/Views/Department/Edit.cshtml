@model DepartmenModifytVM
@{
    ViewData["Title"] = "Edit Department";
}
<button class="btn btn-primary mb-3">
    <a style="text-decoration:none" class="text-white" href="/department/Index">Back to All Departments</a>
</button>
<p class="display-5">Edit Department</p>

<div class="container">
    <form asp-action="Edit" asp-route-DepartmentId="@Model.DepartmentId" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="DepartmentName">Name</label>
            <input asp-for="DepartmentName" class="form-control" />
            <span asp-validation-for="DepartmentName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DepartmentManager">Manager</label>
            <input asp-for="DepartmentManager" class="form-control" />
            <span asp-validation-for="DepartmentManager" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>
</div>