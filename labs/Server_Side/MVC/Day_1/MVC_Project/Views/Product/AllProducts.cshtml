<p class="display-3">All products</p>
<table class="table table-bordered table-hover text-center align-middle">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Image</th>
            <th>Details</th>
        </tr>
    </thead>
    @foreach(Product item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price L.E</td>
            <td>
                <img src="/Images/@item.ImageUrl" width="100" height="100" />
            </td>
            <td>
                <button class="btn btn-primary">
                    <a class="text-white" style="text-decoration:none" href="./Details/@item.Id">Details</a>
                </button>
            </td>
        </tr>
    }
</table>